{
  "name": "client",
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "scripts": {
    "start": "rollup -wc",
    "start:ssr": "node ./ssr/index.js",
    "build": "rollup -c",
    "pretty": "yarn prettier --write --plugin=prettier-plugin-svelte ./**/*.{js,svelte}",
    "lint:js": "yarn eslint \"./**/*.{js,svelte}\"",
    "lint:styles": "yarn stylelint \"./**/*.svelte\"",
    "lint:size": "yarn build && yarn size-limit"
  },
  "dependencies": {
    "svelte": "^3.38.2"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^19.0.0",
    "@rollup/plugin-html": "^0.2.3",
    "@rollup/plugin-node-resolve": "^13.0.0",
    "@size-limit/file": "^4.10.3",
    "@size-limit/preset-app": "^4.10.3",
    "babel-eslint": "^10.1.0",
    "dotenv": "^10.0.0",
    "eslint": "^7.26.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-import": "^2.23.2",
    "eslint-plugin-import-helpers": "^1.1.0",
    "eslint-plugin-svelte3": "^3.2.0",
    "eslint-plugin-unicorn": "^32.0.1",
    "express": "^4.17.1",
    "husky": ">=6",
    "lint-staged": ">=10",
    "postcss": "^8.2.15",
    "prettier": "^2.3.0",
    "prettier-plugin-svelte": "^2.3.0",
    "rimraf": "^3.0.2",
    "rollup": "^2.48.0",
    "rollup-plugin-css-only": "^3.1.0",
    "rollup-plugin-livereload": "^2.0.0",
    "rollup-plugin-postcss": "^4.0.0",
    "rollup-plugin-progress": "^1.1.2",
    "rollup-plugin-serve": "^1.1.0",
    "rollup-plugin-svelte": "^7.1.0",
    "rollup-plugin-terser": "^7.0.2",
    "size-limit": "^4.10.3",
    "stylelint": "^13.13.1",
    "stylelint-config-recess-order": "^2.4.0",
    "stylelint-config-recommended": "^5.0.0",
    "stylelint-order": "^4.1.0"
  },
  "size-limit": [
    {
      "path": "public/*.js",
      "limit": "10 kB"
    },
    {
      "path": "public/*.css",
      "limit": "2 kB"
    }
  ]
}
